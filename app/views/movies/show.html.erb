<% if @item %>

<h1>
  <span><%= @item.normalized_id %></span>
  <span><%= @item.title %></span>
</h1>

<div class="row mt-3">
  <div class="col-md-8">
    <%= image_tag @item.cover_image_url, class: "img-fluid" %>
  </div>
  <div class="col-md-4">
    <dl>
      <dt>Release Date</dt>
      <dd><%= @item.date %></dd>
      <dt>Thumbnail Image</dt>
      <dd><%= image_tag @item.thumbnail_image_url %></dd>
      <% if @item.actresses %>
      <dt>Actresses</dt>
      <dd>
        <% @item.actresses.each do |actress| %>
        <ul class="list-unstyled">
          <li class="media">
            <%= image_tag(actress.image_url, class: "align-self-center") if actress.image_url %>
            <div class="media-body align-self-center">
              <%= actress.name %>
            </div>
          </li>
        </ul>
        <% end %>
      </dd>
      <% end %>
      <dt>Powered by</dt>
      <dd>
        <%= @item.kind_of?(FanzaItem) ? "Fanza" : "JavLibrary" %>
      </dd>
      <dt>Data Source</dt>
      <dd><%= link_to @item.url, @item.url %></dd>
    </dl>
  </div>
</div>

<% else %>

<div class="d-flex justify-content-center">
  <div class="spinner-border text-primary m-5" role="status">
    <span class="sr-only">Loading...</span>
  </div>
</div>
<div class="d-flex justify-content-center">
  <strong>Loading in background, try refresh later.</strong>
</div>

<% end %>